<resources>
    <!-- Enable auxiliary cameras selector. -->
    <bool name="config_enableAuxCameras">true</bool>

    <!-- List of ID of auxiliary cameras that must be ignored by the app. -->
    <string-array name="config_ignoredAuxCameraIds">
        <item>2</item> <!-- Back, monochrome camera -->
        <item>4</item> <!-- Back, same as main, no zoom -->
        <item>5</item> <!-- Back, can't be opened -->
        <item>6</item> <!-- Back, can't be opened -->
        <item>7</item> <!-- Front, can't be opened -->
    </string-array>
</resources>
